version: "2.4"
x-database-variables: &database-variables
  SPRING_DATASOURCE_URL: jdbc:mysql://mysql:3306/testdatabase?createDatabaseIfNotExist=true
  SPRING_DATASOURCE_USERNAME: root
  SPRING_DATASOURCE_PASSWORD: valtergodoy
services:
  db:
    image: mysql:8.0.23
    container_name: mysql
    ports:
      - '3306:3306'
    environment:
      - MYSQL_ROOT_HOST=%
      - MYSQL_DATABASE=testdatabase
      - MYSQL_ROOT_USER=root
      - MYSQL_ROOT_PASSWORD=valtergodoy
    volumes:
      - mysql_data:/var/lib/mysql

  testspring:
    image: registry.hub.docker.com/valterrgodoy/testspring:0.0.1-SNAPSHOT
    ports:
    - "8080:8080"
    environment:
      <<: *database-variables


volumes:
  mysql_data:
